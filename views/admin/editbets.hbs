<div class="row pt-5">
    <div class="container pt-5">
        <h1 class="pt-5">{{data.date}}</h1>

        <form action="/admin/editbets/{{data._id}}" enctype="multipart/form-data" method="POST">
        <div class="form-group mt-3">
            <label>League</label>
            <input value="{{data.league}}" name="league" type="text" class="form-control mb-2" placeholder="league name">
            <label>Time</label>
            <input value="{{data.time}}" name="time" type="text" class="form-control mb-4" placeholder="match time">
            <label class="font-weight-bold">MATCH</label>
            <br>
            <div class="row">
                <div class="col-6">
                <label for="">Home</label>
            <input value="{{data.home}}" name="home" type="text" class="form-control mb-2" placeholder="home team">
            
            </div>
            <div class="col-6">
                <label for="">Away</label>
            <input value="{{data.away}}" name="away" type="text" class="form-control mb-4" placeholder="away team">
            

            </div>
            

            </div>
            <label>Prediction</label>
            <input  value="{{data.prediction}}" name="prediction" type="text" class="form-control mb-4" placeholder="match prediction">

            <label>ODD</label>
            <input value="{{data.odd}}" name="odd" type="number" step="0.01" min="0" class="form-control mb-4" placeholder="ODD">
            <img src="{{data.image}}" id="img" style="width: 100px;" alt="">
            <label for="exampleFormControlFile1">img input</label>
            <input value="{{data.image}}" name="image" type="text" class="form-control" placeholder="image url">
            <button type="submit" class="btn btn-primary mt-5">Submit</button>

        </div>

    </form>
        
        
        

        

    </div>
</div>

